<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rasharun.mappapptrack.MainActivity">

    <Button
        android:id="@+id/bttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="216dp"
        android:onClick="showMyLocation"
        android:text="click me to show ur location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suna Arun"
        android:textSize="30sp"
        android:padding="20dp"
        android:textColor="#0ddd0f"
        android:layout_centerInParent="true"
        android:layout_above="@id/bttn"/> 

</RelativeLayout>